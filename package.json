{
  "name": "ramtousd",
  "version": "0.1.0",
  "description": "TUI that converts RAM usage by process to USD and Apple dollars",
  "author": "Matt <matt@eatsleeprepeat.net>",
  "license": "Apache-2.0",
  "type": "module",
  "keywords": [
    "ram",
    "memory",
    "tui",
    "macos",
    "cli",
    "terminal"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/elithrar/ram-to-usd.git"
  },
  "homepage": "https://github.com/elithrar/ram-to-usd",
  "bugs": {
    "url": "https://github.com/elithrar/ram-to-usd/issues"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "bin": {
    "ramtousd": "./src/index.tsx"
  },
  "files": [
    "src",
    "README.md"
  ],
  "scripts": {
    "start": "bun run src/index.tsx",
    "build": "bun build --compile --minify --sourcemap ./src/index.tsx --outfile dist/ramtousd",
    "check": "bun run lint && bun run format:check && bun run typecheck",
    "lint": "oxlint",
    "format": "oxfmt --write src/",
    "format:check": "oxfmt --check src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run check"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.10",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "^0.1.75",
    "@opentui/react": "^0.1.75",
    "react": "^19.2.4"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "bun": {
      "optional": false
    }
  }
}
